package day09;

import java.util.ArrayList;

public class Ex04_Quiz {
	public static void main(String[] args) {
		String str, str2, str3, changstr = new String();
		str = "Have a nice day Have a nice day Have a nice day";
		ArrayList arr = new ArrayList();
		ArrayList arr2 = new ArrayList();
		ArrayList arr3 = new ArrayList();
		for (int i = 0; i < str.length(); i++) {
			if (str.charAt(i) == 'a') {
				arr.add(i);
			}
		}
		System.out.println(arr);

		str2 = "It is a fun java programming";
		for (int i = 0; i < str2.length(); i++) {
			if (str2.charAt(i) == 'a') {
				arr2.add(i);
			} else if (str2.charAt(i) == 'g') {
				arr3.add(i);
			}
		}
		System.out.println("총 개수 : " + str2.length());
		System.out.println("a 개수 : " + arr2.size());
		System.out.println("a 개수 : " + arr3.size());
		
		str3 = "tESt sTring    change first";
		String[] s = str3.split(" ");
		for(int i = 0; i < s.length; i++) {
			for(int j = 0; j< s[j].length(); j++) {
				if( j == 0 ) {
					System.out.println(s);
				}
			}
		}
		System.out.println("변경 전 : " + str3);
	}
}
